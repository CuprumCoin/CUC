(library
 (name tezos_workers)
 (public_name tezos-workers)
 (libraries tezos-base
            tezos-stdlib-unix)
 (flags (:standard -open Tezos_base__TzPervasives
                   -open Tezos_stdlib_unix
)))

(alias
 (name runtest_lint)
 (package tezos-workers)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
